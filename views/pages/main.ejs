        text-align: center;
    }

    .article_form {
        width: 200px;
        display: flex;
        flex-wrap: wrap;
        border: 1px solid;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }

    input,
    .article,
    .addBtn {
        padding: 10px;
        margin-top: 10px;
    }

